{
  "name": "DD",
  "displayName": "DoNotDisturb++",
  "description": "Visual Studio Code extension for classifying notifications",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ddNotifications",
          "title": "DoNotDisturb++",
          "icon": "$(bell)"
        }
      ]
    },
    "views": {
      "ddNotifications": [
        {
          "id": "ddNotifications",
          "name": "Notifications",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "DD.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "DD.showImportantItems",
        "title": "Show Important Notifications",
        "icon": "$(warning)"
      },
      {
        "command": "DD.refreshNotifications",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "DD.clearDigested",
        "title": "Clear All",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.clearImportant",
        "title": "Clear Important",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.generateMockNotification",
        "title": "Generate Mock Notification",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.generateFromSource",
        "title": "Generate Notification from Source",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.toggleMockGenerator",
        "title": "Toggle Mock Notification Generator",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.toggleFocus",
        "title": "Toggle Focus Mode",
        "icon": "$(eye)",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.setUserName",
        "title": "Set User Name",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.sendChatMessage",
        "title": "Send Chat Message",
        "icon": "$(comment-discussion)",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.openChatPanel",
        "title": "Open Chat Panel",
        "icon": "$(comment-discussion)",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.openRulesPanel",
        "title": "Configure Notification Rules",
        "icon": "$(settings-gear)",
        "category": "DoNotDisturb++"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "DD.refreshNotifications",
          "when": "view == ddNotifications",
          "group": "navigation"
        },
        {
          "command": "DD.clearDigested",
          "when": "view == ddNotifications",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "DD.clearDigested",
          "when": "view == ddNotifications && viewItem == notification",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "DoNotDisturb++",
      "properties": {
        "dd.userName": {
          "type": "string",
          "default": "",
          "description": "Your name for @mention detection. Notifications containing @yourname will be marked as important."
        },
        "dd.rules": {
          "type": "array",
          "default": [],
          "description": "Custom notification rules. Each rule defines source, priority, action, and focus mode behavior. Use the 'Configure Notification Rules' command to edit.",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "User-friendly name/title for this rule (optional, auto-generated if not provided)"
              },
              "source": {
                "type": "string",
                "description": "Notification source (e.g., 'Git', 'Build', '*' for any)"
              },
              "priority": {
                "type": "number",
                "description": "Priority level: 0=Low, 1=Medium, 2=High, 3=Critical"
              },
              "action": {
                "type": "string",
                "enum": ["allow", "suppress", "digest"],
                "description": "Action to take: 'allow' (show immediately), 'suppress' (hide), 'digest' (sidebar)"
              },
              "showInFocusMode": {
                "type": "boolean",
                "description": "Whether to show this notification even when Focus mode is enabled"
              },
              "contains": {
                "type": "string",
                "description": "Optional text filter (case-insensitive substring match)"
              }
            }
          }
        }
      }
    },
    "keybindings": [
      {
        "command": "DD.toggleFocus",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus || !editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
