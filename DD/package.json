{
  "name": "DD",
  "displayName": "DoNotDisturb++",
  "description": "Visual Studio Code extension for classifying notifications",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ddNotifications",
          "title": "DoNotDisturb++",
          "icon": "$(bell)"
        }
      ]
    },
    "views": {
      "ddNotifications": [
        {
          "id": "ddNotifications",
          "name": "Notifications",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "DD.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "DD.showImportantItems",
        "title": "Show Important Notifications",
        "icon": "$(warning)"
      },
      {
        "command": "DD.refreshNotifications",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "DD.clearDigested",
        "title": "Clear All",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.clearImportant",
        "title": "Clear Important",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.generateMockNotification",
        "title": "Generate Mock Notification",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.generateFromSource",
        "title": "Generate Notification from Source",
        "category": "DoNotDisturb++"
      },
      {
        "command": "DD.toggleMockGenerator",
        "title": "Toggle Mock Notification Generator",
        "category": "DoNotDisturb++"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "DD.refreshNotifications",
          "when": "view == ddNotifications",
          "group": "navigation"
        },
        {
          "command": "DD.clearDigested",
          "when": "view == ddNotifications",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "DD.clearDigested",
          "when": "view == ddNotifications && viewItem == notification",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
